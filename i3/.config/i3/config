# Screen lock, black background, l for lock
#bindsym $mod4+l exec i3lock -c "000000"

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# cf https://wiki.archlinux.org/index.php/I3
set $locker i3lock -c "000000"
set $systemMode "[l]ock, [d]isconnect, (e)xit, [s]uspend, [h]ibernate, [r]eboot, [p]oweroff"
bindsym $mod4+l mode $systemMode
mode $systemMode {
        bindsym l exec --no-startup-id $Locker && sleep 1, mode "default"
        bindsym d exec --no-startup-id dm-tool switch-to-greeter
        bindsym e exec --no-startup-id i3-msg exit, mode "default"
        bindsym s exec --no-startup-id $Locker && sleep 1 && systemctl suspend, mode "default"
        bindsym h exec --no-startup-id $Locker && sleep 1 && systemctl hibernate, mode "default"
        bindsym r exec --no-startup-id systemctl reboot, mode "default"
        bindsym p exec --no-startup-id  systemctl poweroff -i, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Manage several monitors (snippet from https://christopherdecoster.com/posts/i3-wm/)
set $displayMode "Set display mode [w]ork [l]aptop [t]eaching [p]resentation [h]ome"
bindsym $mod+x mode $displayMode
mode $displayMode {
    bindsym w exec "~/.config/i3/scripts/work-display.sh";
    bindsym l exec "~/.config/i3/scripts/laptop-display.sh"; 
    bindsym t exec "~/.config/i3/scripts/teaching-display.sh"; 
    bindsym p exec "~/.config/i3/scripts/presentation-display.sh"; 
    bindsym h exec "~/.config/i3/scripts/home-display.sh"; 

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#change volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle
