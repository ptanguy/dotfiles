# return to session manager, d for deconnect without closing
bindsym $mod4+d exec dm-tool switch-to-greeter

# Screen lock, black background, l for lock
bindsym $mod4+l exec i3lock -c "000000"

# Screen lock and suspend , black background
bindsym $mod+Shift+x exec --no-startup-id "i3lock -c 000000 ; systemctl suspend;"

# Start network-manager
exec --no-startup-id nm-applet

# Start network-manager
exec --no-startup-id blueman-applet

# Manage several monitors (snippet from https://christopherdecoster.com/posts/i3-wm/)
set $displayMode "Set display mode [w]ork [l]aptop [t]teaching"
bindsym $mod+x mode $displayMode
mode $displayMode {
    bindsym w exec "~/.config/i3/scripts/work-display.sh";
    bindsym l exec "~/.config/i3/scripts/laptop-display.sh"; 
    bindsym t exec "~/.config/i3/scripts/teaching-display.sh"; 

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

